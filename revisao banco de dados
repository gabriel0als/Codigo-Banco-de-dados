-- a)

select primeiroNome, segundoNome, ultimoNome from Funcionario order by ultimoNome;

-- b)

select * from Funcionario order by cidade;

-- c)

select primeiroNome from Funcionario where salario > 1000 order by primeiroNome;

-- d)

select primeiroNome, dataNasc from Funcionario order by dataNasc desc;

-- e)

select primeiroNome, segundoNome, fone from Funcionario;

-- f)

select sum(salario) from Funcionario;

-- g)

select primeiroNome, funcao, DEPARTAMENTO.nome funcao from Funcionario, Departamento where FUNCIONARIO.codigoDepartamento = DEPARTAMENTO.codigoDepartamento;

-- h)

select nome, codigoFuncionarioGerente from Departamento;






