create database revisao;
use revisao;

create table Funcionario (
	codigo int primary key,
    primeiroNome varchar(15) not null,
    segundoNome varchar(15) not null,
    ultimoNome varchar(15) not null,
    dataNasc date not null,
    CPF varchar(11) not null,
    RG varchar(10) not null,
    endereço varchar(20) not null,
    CEP char(11) not null,
    cidade varchar(20) not null,
    fone varchar(9) not null,
    codigoDepartamento int not null,
    funcao varchar(20) not null,
    salario int not null,
	foreign key (codigoDepartamento) references Departamento(codigoDepartamento)
);

create table Departamento (
	codigoDepartamento int primary key,
    nome varchar(20) not null,
    localizacao varchar(20) not null,
    codigoFuncionarioGerente int not null
);

